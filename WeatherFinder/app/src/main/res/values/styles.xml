<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/main</item>
        <item name="android:textColorPrimary">@color/main</item>
        <item name="android:textColorSecondary">@color/main_dark</item>
        <item name="android:colorBackground">@color/appwhite</item>
        <item name="colorPrimaryDark">@color/main_dark</item>

    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/appwhite</item>
        <item name="colorPrimary">@color/main</item>
        <item name="android:textColorSecondary">@color/appwhite</item>
        <item name="colorAccent">#43A047</item>
    </style>

    <style name="popUpTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorBackground">@color/appwhite</item>
        <item name="android:textColor">@color/main</item>
    </style>

    <color name="main">#4CAF50</color>
    <color name="appwhite">#E8F5E9</color>
    <color name="ripplewhite">#A5D6A7</color>
    <color name="black">#000000</color>
    <color name="main_dark">#1B5E20</color>

</resources>
